<div class="container">
  <div class="mx-3">
    <h1 class="fw-light">Team Overiew</h1>
    <h3>Players</h3>
  </div>
  <div class="d-flex row">
    <% @players.each do |player| %>
      <%= render "/players/player_card", player: player %>
    <% end %>
  </div>
  <div class="mx-3 mt-5">
    <h3>Employees</h3>
  </div>
  <div class="d-flex row employees">
    <% @employees.each do |employee| %>
      <%= render "/employees/employee_card", employee: employee %>
    <% end %>
  </div>
</div>
