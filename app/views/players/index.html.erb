<div class="container">
  <div class="d-flex justify-content-between">
    <div class="d-flex">
      <div class="players-title d-flex align-items-center">
        <h3>Players</h3>
      </div>
      <%= link_to new_team_player_path(@team) do %>
        <i class="fa-solid fa-circle-plus fa-3x m-3" style="color: #ffffff;"></i>
      <% end %>
    </div>
    <div class="navigation-links d-flex align-items-end me-3">
      <%= link_to "Back to team dashboard", team_path(@team) %>
    </div>
  </div>
  <div class="d-flex row">
    <% @players.each do |player| %>
      <%= render "player_card", player: player %>
    <% end %>
  </div>
</div>
