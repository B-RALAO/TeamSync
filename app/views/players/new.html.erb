<div class="container h-100 d-flex align-items-center justify-content-center">
  <div class="login form p-5 w-50 shadow mt-5 bg-white rounded-4">

    <%= link_to team_players_path(@team) do %>
      <i class="fas fa-2x fa-chevron-circle-left" style="color: #dddddd;"></i>
    <% end %>
    <h2 class="text-center text-primary">Add Player</h2>

    <div class="mt-3">
      <%= render "form", player: @player, team: @team %>
    </div>

  </div>
</div>
