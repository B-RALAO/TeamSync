<div class="chatrooms-div border-div d-flex">
  <div class="border-div d-flex flex-column">
    <div class="border-div d-flex justify-content-between">
      <h3 class="text-center pt-3">Chatrooms</h3>
      <div class="border-div d-flex align-items-center ">
        <%= link_to new_team_chatroom_path(@team) do %>
          <i class="fa-solid fa-circle-plus fa-2x m-2" style="color: #000000;"></i>
        <% end %>
      </div>
    </div>
    <hr>
    <div class="d-flex flex-column align-items-center">
      <% @chatrooms.each do |chatroom| %>
        <div class="my-2 bg-primary rounded-4 d-flex justify-content-center w-100">
          <%= link_to chatroom.name, team_chatroom_path(@team, chatroom) %>
        </div>
      <% end %>
    </div>

  </div>


</div>
