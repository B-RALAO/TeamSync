  <div id="injured" class="row m-3  mt-2 ms-3">
    <div class="row">
      <div class="col-6">
        <h3 class="text-start m-4">Previous Games</h3>
      </div>
    </div>

    <div class=" injured-players d-flex flex-row justify-content-start mb-2 mx-4">
      <% @team.games.each do |game| %>
        <div class=" col-3 d-flex">
          <div class=" col-3">
            <div class="text-center">
              <% if game.opposition != nil %>
                <%= image_tag Event::OPPONENTS[game.opposition], width: 60%>
              <% end %>
            </div>
          </div>

          <div class=" col-9 flex-start">
            <div class=" row">
              <h6><%= game.location %></h6>
            </div>
            
            <div class=" row">
              <h6><%= game.opposition %></h6>
            </div>

            <div class=" row">
              <% if game.outcome === "Win" %>
                <div class="health-status available mx-2">
                  <%= game.outcome %>
                </div>
              <% elsif game.outcome === "Draw" %>
                <div class="health-status limited mx-2">
                  <%= game.outcome %>
                </div>
              <% else game.outcome === "Win" %>
                <div class="health-status injured mx-2">
                  <%= game.outcome %>
                </div>
              <% end %>
            </div>

          </div>
        </div>
    <% end %>
    </div>
  </div>
